# Required: PostgreSQL Database Connection
# Set USE_IN_MEMORY_CHECKPOINTER=1 to skip database (data lost on restart)
PG_CONN_STR=postgresql://user:pass@host:5432/dbname

# Optional: OpenAI API Key
# Required only for the internal moderator/summarizer features.
# Users can provide their own keys in the UI (BYOK mode) for panel responses.
OPENAI_API_KEY=sk-...

# Optional: Additional LLM Provider API Keys
# Users can also enter these directly in the UI
GEMINI_API_KEY=
CLAUDE_API_KEY=
GROK_API_KEY=

# Optional: Tavily API Key for web search functionality
TAVILY_API_KEY=tvly-...

# Optional: Use in-memory storage (no database required, data lost on restart)
USE_IN_MEMORY_CHECKPOINTER=0
