# Docker Compose Environment Configuration
# Copy this file to .env and fill in your values

# ============================================
# PostgreSQL Database Configuration
# ============================================
POSTGRES_DB=multi_agent_panel
POSTGRES_USER=panel_user
POSTGRES_PASSWORD=changeme_in_production
POSTGRES_PORT=5432

# ============================================
# Application Configuration
# ============================================
APP_PORT=8080

# ============================================
# LLM API Keys
# ============================================
# OPENAI_API_KEY is optional - the app supports BYOK (Bring Your Own Key) mode
# where users enter their own keys in the UI. However, setting this enables
# the moderator and summarizer features which use OpenAI internally.
OPENAI_API_KEY=

# Optional: Additional provider keys (users can also enter these in the UI)
GEMINI_API_KEY=
CLAUDE_API_KEY=
ANTHROPIC_API_KEY=
GROK_API_KEY=
XAI_API_KEY=

# Optional: Tavily API Key for web search functionality
TAVILY_API_KEY=

# ============================================
# Advanced Settings
# ============================================
# Set to 1 to use in-memory storage (no PostgreSQL required, data lost on restart)
USE_IN_MEMORY_CHECKPOINTER=0
